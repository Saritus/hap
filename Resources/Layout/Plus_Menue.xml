<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/lRelLayout23">
    <LinearLayout
        android:id="@+id/Text12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <TextView
            android:id="@+id/Text1"
            android:text="TITEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="20dip"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Text2"
            android:text="Beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dip"
            android:textColor="#ffffffff"
            android:textStyle="normal" />
    </LinearLayout>
    <ImageButton
        android:src="@android:drawable/ic_menu_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1"
        android:layout_below="@+id/imageButton2" />
    <TextView
        android:id="@+id/Text3"
        android:text="Aus Gallerie wählen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/imageButton1"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_alignBottom="@+id/imageButton1"
        android:gravity="center" />
    <ImageButton
        android:src="@android:drawable/ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/relLayout2" />
    <TextView
        android:id="@+id/Text4"
        android:text="Foto machen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:gravity="center" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_below="@+id/imageButton1"
        android:background="#ffe51111" />
    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="169.5dp"
        android:id="@+id/datePicker1"
        android:layout_below="@+id/Text12"
        style="@android:style/Widget.DatePicker" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_below="@+id/datePicker1"
        android:id="@+id/relLayout2">
        <ImageButton
            android:src="@drawable/icon_hap1_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton33"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/imageButton55" />
        <ImageButton
            android:src="@drawable/icon_hap2_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton44"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/imageButton33" />
        <ImageButton
            android:src="@drawable/icon_hap3_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton55"
            android:background="@android:color/transparent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_navbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1">
            <ImageView
                android:id="@+id/ViewIsOnlyForAlphaValueBackground3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff424242"
                android:alpha="0.7" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout11"
                android:layout_weight="0">
                <ImageButton
                    android:src="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton567"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:src="@drawable/arrow_left_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton367"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter" />
                <ImageButton
                    android:src="@drawable/arrow_right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton467"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/DateAndTime"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/imageView1">
        <LinearLayout
            android:id="@+id/ganztaegig"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_below="@+id/imageView1">
            <ImageView
                android:src="@android:drawable/ic_menu_recent_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_weight="0.1" />
            <TextView
                android:id="@+id/Text46"
                android:text="Ganztägig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14dip"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_weight="0.1" />
            <ImageView
                android:src="#fff21919"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/schiebtSwitchRechts"
                android:layout_weight="0.65" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/switch1"
                android:layout_weight="0.15" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>